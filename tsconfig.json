{
  "compileOnSave": false,
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    // "allowJs": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "app": ["app"],
      "src": ["./"],
      "styles": ["styles"],
      "lib": ["../lib"],
      "data": ["../data"]
    }
  }
}
